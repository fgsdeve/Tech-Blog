{{!-- {{> header}} --}}
<div class="container">
  <h1>Dashboard</h1>
  <div id="posts">
  {{#each posts}}
    <div class="post">
      <h2>{{this.title}}</h2>
      <p>{{this.content}}</p>
      <button value="{{this.id}}" class="edit-post">Edit</button>
      <button value="{{this.id}}" class="delete-post">Delete</button>
    </div>
  {{/each}}
  </div>
  <button id="new-post">New Post</button>
  <form class="new-post-form" action="/api/posts"  method="post">
    <input id="post-title" name="title" type="text" placeholder="Title">
    <textarea id="post-content" name="content" placeholder="Content"></textarea>
    <button type="submit">Submit</button>
  </form>
</div>
{{> footer}}
