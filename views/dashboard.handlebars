{{> header}}
<div class="container">
  <h1>Dashboard</h1>
  {{#each posts}}
    <div class="post">
      <h2>{{this.title}}</h2>
      <p>{{this.content}}</p>
      <button data-id="{{this.id}}" class="edit-post">Edit</button>
      <button data-id="{{this.id}}" class="delete-post">Delete</button>
    </div>
  {{/each}}
  <button id="new-post">New Post</button>
  <form class="new-post-form">
    <input id="post-title" type="text" placeholder="Title">
    <textarea id="post-content" placeholder="Content"></textarea>
    <button type="submit">Submit</button>
  </form>
</div>
{{> footer}}
<script src="/js/post.js"></script>
