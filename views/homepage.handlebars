{{!-- No need to include the header partial here --}}
<div class="container">
  <h2>Welcome to the Tech Blog</h2>
  {{#each posts}}
    <div class="post">
      <h3>{{this.title}}</h3>
      <p>{{this.content}}</p>
      <p>Posted by {{this.user.username}} on {{format_date this.createdAt}}</p>
    </div>
  {{/each}}
</div>
